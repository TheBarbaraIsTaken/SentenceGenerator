document.addEventListener("DOMContentLoaded", function() {
    // Check if localStorage is supported by the browser
    if (typeof(Storage) !== "undefined") {
        // Get the input elements by their classes
        var keywordInput = document.querySelector(".form-group#key_word");
        var posInput = document.querySelector(".form-group#pos");

        // Load saved values from localStorage when the page loads
        keywordInputInput.value = localStorage.getItem("key_word") || "";
        posInput.value = localStorage.getItem("pos") || "";

        // Add an event listener to save the values to localStorage
        document.querySelector(".container").addEventListener("Give me my sentence", function(e) {
            e.preventDefault();
            localStorage.setItem("key_word", keywordInput.value);
            localStorage.setItem("pos", posInput.value);
            alert("Data saved!");
        });
    } else {
        alert("This browser does not support Web Storage.");
    }
});